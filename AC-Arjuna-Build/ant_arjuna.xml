<?xml version= "1.0"?>
<project name="arjuna" default="build" basedir=".">
	<import file="./ant_tasks/global.xml"/>
	<import file="./ant_tasks/batteries.xml"/>
	<import file="./ant_tasks/unitee.xml"/>
	<import file="./ant_tasks/uiautomator.xml"/>
	<import file="./ant_tasks/arjunasdk.xml"/>
	<import file="./ant_tasks/arjunafree.xml"/>
	<import file="./ant_tasks/obfuscate.xml"/>
	<description>
simple example build file
</description>
	<!-- set global properties for this build -->

	<!-- ======================================================================================== -->
	<!-- ===================================== GLOBAL PROPERTIES =================================================== -->
	<!-- ===================================== Common =================================================== -->
	<!-- ======================================================================================== -->
	
	<taskdef resource="proguard/ant/task.properties" classpath="/Users/rahulverma/Documents/coding_workbench/tools_dir/proguard5.2.1/lib/proguard.jar" />
		
	<target name="build">
		<antcall>
	    	<target name="global_clean"/>
	   	</antcall>
		<antcall>
	    	<target name="batteries_build"/>
	   	</antcall>
		<antcall>
	    	<target name="uiautomator.core_build"/>
	   	</antcall>
		<antcall>
	    	<target name="unitee.core_build"/>
	   	</antcall>
		<antcall target="arjunasdk_mkdirs">
				<param name="ed" value="sdk"/>
	   	</antcall>
			
		<antcall target="arjunafree_mkdirs">
				<param name="ed" value="free"/>
	   	</antcall>
			
		<antcall target="arjunasdk_compile">
				<param name="ed" value="sdk"/>
	   	</antcall>
			
		<antcall target="arjunafree_compile">
				<param name="ed" value="free"/>
	   	</antcall>
			
		<antcall target="obfuscate">
				<param name="jar1" value="${private.arjunasdk.clear.jar.file}"/>
				<param name="jar2" value="${private.arjunasdk.obfuscated.jar.file}"/>
	   	</antcall>
		<antcall target="obfuscate">
				<param name="jar1" value="${private.arjunafree.clear.jar.file}"/>
				<param name="jar2" value="${private.arjunafree.obfuscated.jar.file}"/>
	   	</antcall>
		
		<antcall target="arjunasdk_build">
				<param name="ed" value="sdk"/>
	   	</antcall>
		
		<antcall target="arjunafree_build">
				<param name="ed" value="free"/>
	   	</antcall>
	</target>

</project>