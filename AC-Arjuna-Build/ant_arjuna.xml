<?xml version= "1.0"?>
<project name="arjuna" default="build" basedir=".">
	<import file="./ant_tasks/global.xml"/>
	<import file="./ant_tasks/batteries.xml"/>
	<import file="./ant_tasks/unitee.xml"/>
	<import file="./ant_tasks/uiautomator.xml"/>
	<import file="./ant_tasks/arjuna-pro-platform.xml"/>
	<import file="./ant_tasks/arjuna-pro-startup.xml"/>
	<import file="./ant_tasks/obfuscate.xml"/>
	<description>
simple example build file
</description>
	<!-- set global properties for this build -->

	<!-- ======================================================================================== -->
	<!-- ===================================== GLOBAL PROPERTIES =================================================== -->
	<!-- ===================================== Common =================================================== -->
	<!-- ======================================================================================== -->
	
	<taskdef resource="proguard/ant/task.properties" classpath="/Users/rahulverma/Documents/coding_workbench/tools_dir/proguard5.2.1/lib/proguard.jar" />
		
	<target name="build">
		<antcall>
	    	<target name="global_clean"/>
	   	</antcall>
		<antcall>
	    	<target name="batteries_build"/>
	   	</antcall>
		<antcall>
	    	<target name="unitee.core_build"/>
	   	</antcall>
		<antcall>
	    	<target name="uiautomator.core_build"/>
	   	</antcall>
		
		<antcall target="arjunaplatform_mkdirs">
				<param name="ed" value="platform"/>
	   	</antcall>
			
		<antcall target="arjunastartup_mkdirs">
				<param name="ed" value="startup"/>
	   	</antcall>
			
		<antcall target="arjunaplatform_compile">
				<param name="ed" value="platform"/>
	   	</antcall>
			
		<antcall target="arjunastartup_compile">
				<param name="ed" value="startup"/>
	   	</antcall>
			
		<antcall target="obfuscate">
				<param name="jar1" value="${private.arjunaplatform.clear.jar.file}"/>
				<param name="jar2" value="${private.arjunaplatform.obfuscated.jar.file}"/>
	   	</antcall>
		<antcall target="obfuscate">
				<param name="jar1" value="${private.arjunastartup.clear.jar.file}"/>
				<param name="jar2" value="${private.arjunastartup.obfuscated.jar.file}"/>
	   	</antcall>
		<antcall>
	    	<target name="arjunaplatform_build"/>
	   	</antcall>
		<antcall>
	    	<target name="arjunastartup_build"/>
	   	</antcall>
	</target>

</project>