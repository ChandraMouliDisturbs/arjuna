<?xml version= "1.0"?>
<project name="unitee.core" default="unitee.core_build" basedir=".">
	<description>
simple example build file
</description>
	<!-- set global properties for this build -->

	<!-- ======================================================================================== -->
	<!-- ===================================== GLOBAL PROPERTIES =================================================== -->
	<!-- ===================================== AC-Batteries =================================================== -->
	<!-- ======================================================================================== -->

	<property name="unitee.core.proj.name" value="AutoCognite-Arjuna-Unitee" />
	<property name="unitee.core.name" value="autocognite-unitee" />
	<property name="unitee.core.github.rep.name" value="autocognite-unitee" />
	<property name="root.unitee.core.dir" value="${all.sources.dir}/${unitee.core.github.rep.name}" />
	<property name="proj.unitee.core.dir" value="${root.unitee.core.dir}/${unitee.core.proj.name}" />
	<property name="src.unitee.core.dir" location="${proj.unitee.core.dir}/src" />

	<property name="unitee.core.dist.file.name" value="${unitee.core.name}.zip" />
	<property name="unitee.core.jar.file.name" value="${unitee.core.name}.jar" />
	<property name="unitee.core.src.file.name" value="${unitee.core.name}-sources.zip" />
	<property name="ant.unitee.core.root.dir" value="${current.build.dir}/${unitee.core.proj.name}" />
	<property name="ant.unitee.core.build.dir" location="${ant.unitee.core.root.dir}/build" />
	<property name="ant.unitee.core.jar.dir" location="${ant.unitee.core.root.dir}/jar" />
	<property name="ant.unitee.core.jar.file" value="${ant.unitee.core.jar.dir}/${unitee.core.jar.file.name}" />
	<property name="private.unitee.core.self.jar.dir" value="${current.dist.private.jars.dir}/unitee-core" />
	<property name="private.unitee.core.self.jar.file" value="${private.unitee.core.self.jar.dir}/${unitee.core.jar.file.name}" />
	<property name="private.unitee.core.dist.src.dir" value="${current.dist.private.sources.dir}/${unitee.core.name}" />
	
	<target name="unitee.core_mkdirs">
		<!-- ======================================================================================== -->
		<!-- ===================================== DIRECTORY STRUCTURE =================================================== -->
		<!-- ===================================== Batteries =================================================== -->
		<!-- ======================================================================================== -->
	
	</target>
	
	<!-- ===================================== AC-Batteries =================================================== -->

	<target name="unitee.core_build" depends="unitee.core_mkdirs">
		<!-- Create the time stamp -->
		<tstamp />
		<!-- Create the build directory structure used by compile -->

		<javac srcdir="${src.unitee.core.dir}" destdir="${ant.unitee.core.build.dir}" debug="true" debuglevel="lines,vars,source" includeantruntime="false">
			<classpath refid="build.classpath" />
		</javac>

		<copy todir="${ant.unitee.core.build.dir}">
		    <fileset dir="${src.unitee.core.dir}"
		             includes="**/*.conf" />
		    <fileset dir="${src.unitee.core.dir}"
		             includes="**/*.help" />
		</copy>
		
		<jar destFile="${ant.unitee.core.jar.file}" filesetmanifest="skip">
			<fileset dir="${ant.unitee.core.build.dir}" />
		</jar>
		
		<copy file="${ant.unitee.core.jar.file}" tofile="${private.unitee.core.self.jar.file}" />
		
		<copy todir="${private.unitee.core.dist.src.dir}/${unitee.core.name}/src">
			<fileset dir="${src.unitee.core.dir}">
				<include name="**/*.*" />
			</fileset>
		</copy>
		
	</target>

</project>