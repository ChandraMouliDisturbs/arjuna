	<!-- ===================================== AC-Batteries =================================================== -->

	<target name="arjunafree_compile">
		<!-- Create the time stamp -->
		<tstamp />
		<!-- Create the build directory structure used by compile -->

		<javac srcdir="${src.arjunafree.dir}" destdir="${ant.arjunafree.build.dir}" debug="true" debuglevel="lines,vars,source" includeantruntime="false">
			<classpath refid="build.classpath" />
		</javac>
		
		<copy todir="${ant.arjunafree.build.dir}">
		    <fileset dir="${src.arjunafree.dir}"
		             includes="**/*.conf" />
		    <fileset dir="${src.arjunafree.dir}"
		             includes="**/*.help" />
		</copy>

		<jar jarfile="${ant.arjunafree.jar.file}" basedir="${ant.arjunafree.build.dir}" />
		<copy file="${ant.arjunafree.jar.file}" tofile="${private.arjunafree.self.jar.file}" />
		<jar destFile="${private.arjunafree.clear.jar.file}">
			<zipgroupfileset includes="*.jar" dir="${private.batteries.self.jar.dir}" />
			<zipgroupfileset includes="*.jar" dir="${private.unitee.core.self.jar.dir}" />
			<zipgroupfileset includes="*.jar" dir="${private.uiautomator.self.jar.dir}" />
			<zipgroupfileset includes="*.jar" dir="${private.arjunafree.self.jar.dir}" />
		</jar>
		
		<copy todir="${private.arjunafree.dist.src.dir}/${arjunafree.name}/src">
			<fileset dir="${src.arjunafree.dir}">
				<include name="**/*.*" />
			</fileset>
		</copy>
	</target>
			
	<target name="arjunafree_build">
		<jar destFile="${private.arjunafree.dist.tools.jar.file}">
		<zipgroupfileset includes="*.jar" dir="${3rd_party_batteries_jars}"/>
			<zipgroupfileset includes="*.jar" dir="${private.arjunafree.obfuscated.jar.dir}"/>
		</jar>

		<zip destfile="${public.tools.arjunafree.dist.file}" basedir="${private.arjunafree.dist.tools.dir}" />
		
		<copy file="${private.arjunafree.dist.tools.jar.file}" tofile="/Users/rahulverma/Documents/_autocognite/build_under_test/autocognite-arjuna/bin/lib/java/arjunafree.jar"/>
		<copy file="${private.arjunafree.dist.tools.jar.file}" tofile="/Users/rahulverma/Documents/VirtualBox_VMs/shared_dir/win/autocognite-arjuna/lib/java/arjunafree.jar"/>

	</target>

