	<!-- ===================================== AC-Batteries =================================================== -->

	<target name="arjunaplatform_compile">
		<!-- Create the time stamp -->
		<tstamp />
		<!-- Create the build directory structure used by compile -->

		<javac srcdir="${src.arjunaplatform.dir}" destdir="${ant.arjunaplatform.build.dir}" debug="true" debuglevel="lines,vars,source" includeantruntime="false">
			<classpath refid="build.classpath" />
		</javac>
		
		<copy todir="${ant.arjunaplatform.build.dir}">
		    <fileset dir="${src.arjunaplatform.dir}"
		             includes="**/*.conf" />
		    <fileset dir="${src.arjunaplatform.dir}"
		             includes="**/*.help" />
		</copy>

		<jar jarfile="${ant.arjunaplatform.jar.file}" basedir="${ant.arjunaplatform.build.dir}" />
		<copy file="${ant.arjunaplatform.jar.file}" tofile="${private.arjunaplatform.self.jar.file}" />
		<jar destFile="${private.arjunaplatform.clear.jar.file}">
			<zipgroupfileset includes="*.jar" dir="${private.batteries.self.jar.dir}" />
			<zipgroupfileset includes="*.jar" dir="${private.unitee.core.self.jar.dir}" />
			<zipgroupfileset includes="*.jar" dir="${private.arjunaplatform.self.jar.dir}" />
		</jar>
		
		<copy todir="${private.arjunaplatform.dist.src.dir}/${arjunaplatform.name}/src">
			<fileset dir="${src.arjunaplatform.dir}">
				<include name="**/*.*" />
			</fileset>
		</copy>
	</target>
			
	<target name="arjunaplatform_build">
		<jar destFile="${private.arjunaplatform.dist.tools.jar.file}">
		<zipgroupfileset includes="*.jar" dir="${3rd_party_batteries_jars}"/>
			<zipgroupfileset includes="*.jar" dir="${private.arjunaplatform.obfuscated.jar.dir}"/>
		</jar>

		<zip destfile="${public.tools.arjunaplatform.dist.file}" basedir="${private.arjunaplatform.dist.tools.dir}" />
		
		<copy file="${private.arjunaplatform.dist.tools.jar.file}" tofile="/Users/rahulverma/Documents/_autocognite/build_under_test/autocognite-arjuna/lib/java/arjunaplatform.jar"/>
		<copy file="${private.arjunaplatform.dist.tools.jar.file}" tofile="/Users/rahulverma/Documents/VirtualBox_VMs/shared_dir/win/autocognite-arjuna/lib/java/arjunaplatform.jar"/>

	</target>

