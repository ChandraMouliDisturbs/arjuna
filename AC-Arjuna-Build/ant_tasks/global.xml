<?xml version= "1.0"?>
<project name="global" default="global_clean" basedir=".">
	<description>
simple example build file for arjuna
</description>
	<!-- set global properties for this build -->

	<!-- ======================================================================================== -->
	<!-- ===================================== GLOBAL PROPERTIES =================================================== -->
	<!-- ===================================== Common =================================================== -->
	<!-- ======================================================================================== -->

	<property name="3rd_party_batteries_jars" location="/Users/rahulverma/Documents/Dropbox/_jars/batteries_jars">
		
	</property> 
	<property name="3rd_party_uiauto_jars" location="/Users/rahulverma/Documents/Dropbox/_jars/uiauto_jars"/>

	<property name="autocognite.build.version" value="0.2.6-b" />

	<property name="autocognite.dir" value="/Users/rahulverma/Documents/_autocognite" />
	<property name="all.sources.dir" location="/Users/rahulverma/Documents/coding_workbench/eclipse_java_ws_rep_clone" />
	<property name="all.dist.dir" value="${autocognite.dir}/all_dists" />
	<property name="current.dist.dir" value="${autocognite.dir}/current_dist" />
	<property name="current.build.dir" location="${autocognite.dir}/current_build" />

	<property name="batteries.depends.jar.dir" location="/Users/rahulverma/Documents/Dropbox/_jars/batteries_jars" />

	<property name="current.dist.private.dir" location="${current.dist.dir}/private/AutoCognite-${autocognite.build.version}" />
	<property name="current.dist.private.components.dir" location="${current.dist.private.dir}/components" />
	<property name="current.dist.private.jars.dir" value="${current.dist.private.dir}/component_jars" />
	<property name="current.dist.private.sources.dir" value="${current.dist.private.dir}/sources" />
	<property name="current.dist.private.tools.dir" value="${current.dist.private.dir}/tools" />
	
	<property name="source.private.meta.dir" value="${all.sources.dir}/arjuna/AC-Arjuna-Build/for_building" />
	<property name="source.private.meta.examples.dir" value="${source.private.meta.dir}/examples" />
	<property name="source.private.meta.examples.common.dir" value="${source.private.meta.examples.dir}/common" />
	<property name="source.private.meta.bin.dir" value="${source.private.meta.dir}/bin" />
	<property name="source.private.meta.bin.common.dir" value="${source.private.meta.bin.dir}/common" />
	<property name="source.private.meta.docs.dir" value="${source.private.meta.dir}/docs" />
	<property name="source.private.meta.docs.common.dir" value="${source.private.meta.docs.dir}/common" />
	<property name="source.private.meta.lntexts.dir" value="${source.private.meta.dir}/license_notice_texts" />
	<property name="source.private.meta.lntexts.common.dir" value="${source.private.meta.lntexts.dir}/common" />
	<property name="source.private.meta.config.dir" value="${source.private.meta.dir}/config" />
	<property name="source.private.meta.config.common.dir" value="${source.private.meta.config.dir}/common" />

	<property name="source.general.acprops.file" value="${all.sources.dir}/arjuna/AC-Arjuna-Build/arjunapro.conf" />

	<property name="current.dist.public.dir" location="${current.dist.dir}/public/AutoCognite-${autocognite.build.version}" />
	<property name="current.dist.public.tools.dir" location="${current.dist.public.dir}" />
	
	<target name="gp">
	</target>
	
	<!-- ======================================================================================== -->
	<!-- ===================================== CLASSPATH =================================================== -->
	<!-- ======================================================================================== -->

	<path id="build.classpath">
		<fileset dir="${3rd_party_batteries_jars}">
			<include name="**/*.jar" />
		</fileset>
		<fileset dir="${3rd_party_uiauto_jars}">
			<include name="**/*.jar" />
		</fileset>
		<fileset dir="${private.batteries.self.jar.dir}">
			<include name="**/*.jar" />
		</fileset>
		<fileset dir="${private.unitee.core.self.jar.dir}">
			<include name="**/*.jar" />
		</fileset>
		<fileset dir="${private.uiautomator.self.jar.dir}">
			<include name="**/*.jar" />
		</fileset>
	</path>

	<target name="global_clean" description="clean up">
		<!-- Delete the ${build} and ${dist} directory trees -->

		<!-- ======================================================================================== -->
		<!-- ===================================== DIRECTORY STRUCTURE =================================================== -->
		<!-- ===================================== Common =================================================== -->
		<!-- ======================================================================================== -->

		<delete dir="${current.dist.dir}" />
		<mkdir dir="${current.dist.dir}" />
		<delete dir="${current.build.dir}" />
		<mkdir dir="${current.build.dir}" />

		<mkdir dir="${current.dist.private.dir}" />
		<mkdir dir="${current.dist.private.jars.dir}" />
		<mkdir dir="${current.dist.private.sources.dir}" />
		<mkdir dir="${current.dist.temp.tools.clear.jars.dir}" />
		<mkdir dir="${current.dist.temp.tools.obfuscated.jars.dir}" />

		<mkdir dir="${current.dist.public.tools.dir}" />
		
		<mkdir dir="${ant.batteries.root.dir}" />
		<mkdir dir="${ant.batteries.build.dir}" />
		<mkdir dir="${ant.batteries.jar.dir}" />	
		<mkdir dir="${private.batteries.self.jar.dir}" />	
		
		<mkdir dir="${ant.unitee.core.root.dir}" />
		<mkdir dir="${ant.unitee.core.build.dir}" />
		<mkdir dir="${ant.unitee.core.jar.dir}" />	
		<mkdir dir="${private.unitee.core.self.jar.dir}" />
		
		<mkdir dir="${ant.uiautomator.root.dir}" />
		<mkdir dir="${ant.uiautomator.build.dir}" />
		<mkdir dir="${ant.uiautomator.jar.dir}" />	
		<mkdir dir="${private.uiautomator.self.jar.dir}" />
	</target>

</project>