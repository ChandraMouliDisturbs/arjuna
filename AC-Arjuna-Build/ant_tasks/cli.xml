<?xml version= "1.0"?>
<project name="cli" default="cli_build" basedir=".">
	<description>
simple example build file
</description>
	<!-- set global properties for this build -->

	<!-- ======================================================================================== -->
	<!-- ===================================== GLOBAL PROPERTIES =================================================== -->
	<!-- ===================================== AC-Batteries =================================================== -->
	<!-- ======================================================================================== -->
	<property name="cli.proj.name" value="AutoCognite-Arjuna-CLI" />
	<property name="cli.name" value="autocognite-arjuna-cli" />
	<property name="cli.github.rep.name" value="autocognite-unitee" />
	<property name="root.cli.dir" value="${all.sources.dir}/${cli.github.rep.name}" />
	<property name="proj.cli.dir" value="${root.cli.dir}/${cli.proj.name}" />
	<property name="src.cli.dir" location="${proj.cli.dir}/src" />

	<property name="cli.dist.file.name" value="${cli.name}.zip" />
	<property name="cli.jar.file.name" value="${cli.name}.jar" />
	<property name="cli.src.file.name" value="${cli.name}-sources.zip" />
	<property name="ant.cli.root.dir" value="${current.build.dir}/${cli.proj.name}" />
	<property name="ant.cli.build.dir" location="${ant.cli.root.dir}/build" />
	<property name="ant.cli.jar.dir" location="${ant.cli.root.dir}/jar" />
	<property name="ant.cli.jar.file" value="${ant.cli.jar.dir}/${cli.jar.file.name}" />
	<property name="private.cli.self.jar.dir" value="${current.dist.private.jars.dir}/cli" />
	<property name="private.cli.self.jar.file" value="${private.cli.self.jar.dir}/${cli.jar.file.name}" />
	<property name="private.cli.dist.src.dir" value="${current.dist.private.sources.dir}/${cli.name}" />
	
	<target name="cli_mkdirs">
		<!-- ======================================================================================== -->
		<!-- ===================================== DIRECTORY STRUCTURE =================================================== -->
		<!-- ===================================== Batteries =================================================== -->
		<!-- ======================================================================================== -->
	
	</target>
	
	<!-- ===================================== AC-Batteries =================================================== -->

	<target name="cli_build" depends="cli_mkdirs">
		<!-- Create the time stamp -->
		<tstamp />
		<!-- Create the build directory structure used by compile -->

		<javac srcdir="${src.cli.dir}" destdir="${ant.cli.build.dir}" debug="true" debuglevel="lines,vars,source" includeantruntime="false">
			<classpath refid="build.classpath" />
		</javac>

		<copy todir="${ant.cli.build.dir}">
		    <fileset dir="${src.cli.dir}"
		             includes="**/*.conf" />
		    <fileset dir="${src.cli.dir}"
		             includes="**/*.help" />
		</copy>
		
		<jar destFile="${ant.cli.jar.file}" filesetmanifest="skip">
			<fileset dir="${ant.cli.build.dir}" />
		</jar>
		
		<copy file="${ant.cli.jar.file}" tofile="${private.cli.self.jar.file}" />
		
		<copy todir="${private.cli.dist.src.dir}/${cli.name}/src">
			<fileset dir="${src.cli.dir}">
				<include name="**/*.*" />
			</fileset>
		</copy>
		
	</target>

</project>