<?xml version= "1.0"?>
<project name="arjunasdk" default="arjunasdk_build" basedir=".">
	<description>
simple example build file
</description>
	<!-- set global properties for this build -->

	<!-- ======================================================================================== -->
	<!-- ===================================== GLOBAL PROPERTIES =================================================== -->
	<!-- ===================================== AC-arjuna =================================================== -->
	<!-- ======================================================================================== -->

	<property name="arjunasdk.build_version" value="${autocognite.build.version}" />
	<property name="arjunasdk.proj.name" value="AC-Arjuna-SDK" />
	<property name="arjunasdk.name" value="autocognite-arjuna-sdk" />
	<property name="arjunasdk.github.rep.name" value="arjuna" />
	<property name="root.arjunasdk.dir" value="${all.sources.dir}/${arjunasdk.github.rep.name}" />
	<property name="proj.arjunasdk.dir" value="${root.arjunasdk.dir}/${arjunasdk.proj.name}" />
	<property name="src.arjunasdk.dir" location="${proj.arjunasdk.dir}/src" />
	<property name="arjunasdk.prefix" value="${arjunasdk.name}-${arjunasdk.build_version}" />
		
	<property name="arjunasdk.dist.file.name" value="${arjunasdk.prefix}.zip" />
	<property name="arjunasdk.jar.file.name" value="${arjunasdk.name}.jar" />
	<property name="arjunasdk.full.jar.file.name" value="${arjunasdk.prefix}.jar" />
	<property name="arjunasdk.src.file.name" value="${arjunasdk.prefix}-sources.zip" />
	<property name="ant.arjunasdk.root.dir" value="${current.build.dir}/${arjunasdk.proj.name}" />
	<property name="ant.arjunasdk.build.dir" location="${ant.arjunasdk.root.dir}/build" />
	<property name="ant.arjunasdk.jar.dir" location="${ant.arjunasdk.root.dir}/jar" />
	<property name="ant.arjunasdk.jar.file" value="${ant.arjunasdk.jar.dir}/${arjunasdk.jar.file.name}.jar" />
	
	<property name="private.arjunasdk.jars.dir" value="${current.dist.private.dir}/arjuna_jars/arjuna-sdk" />
	<property name="private.arjunasdk.self.jar.dir" value="${private.arjunasdk.jars.dir}/self" />
	<property name="private.arjunasdk.self.jar.file" value="${private.arjunasdk.self.jar.dir}/${arjunasdk.jar.file.name}" />
	<property name="private.arjunasdk.clear.jar.dir" value="${private.arjunasdk.jars.dir}/open" />
	<property name="private.arjunasdk.clear.jar.file" value="${private.arjunasdk.clear.jar.dir}/clear_${arjunasdk.jar.file.name}" />
	<property name="private.arjunasdk.obfuscated.jar.dir" value="${private.arjunasdk.jars.dir}/obfuscated" />
	<property name="private.arjunasdk.obfuscated.jar.file" value="${private.arjunasdk.obfuscated.jar.dir}/obfuscated_${arjunasdk.jar.file.name}" />

	<property name="private.arjunasdk.dist.tools.dir" value="${current.dist.private.tools.dir}/${arjunasdk.name}-dist" />
	<property name="private.arjunasdk.dist.tools.root.dir" value="${private.arjunasdk.dist.tools.dir}/autocognite-arjuna-sdk" />
	<property name="private.arjunasdk.dist.tools.jar.dir" value="${private.arjunasdk.dist.tools.root.dir}/bin/lib/java" />
	<property name="private.arjunasdk.dist.tools.jar.file" value="${private.arjunasdk.dist.tools.jar.dir}/${arjunasdk.full.jar.file.name}" />
	<property name="private.arjunasdk.dist.jar.file" value="${current.dist.private.jars.dir}/${arjunasdk.full.jar.file.name}" />
	<property name="private.arjunasdk.dist.src.dir" value="${current.dist.private.sources.dir}/${arjunasdk.prefix}" />
	
	<property name="public.tools.arjunasdk.dir" value="${current.dist.public.tools.dir}/${arjunasdk.name}" />
	<property name="public.tools.arjunasdk.dist.file" value="${public.tools.arjunasdk.dir}/${arjunasdk.dist.file.name}" />
	
	
	<target name="arjunasdk_mkdirs">
		<property name="arjEd" value="${ed}" />
		<property name="source.private.meta.examples.my.dir" value="${source.private.meta.examples.dir}/${arjEd}" />
		<echo message="HERE ${source.private.meta.examples.my.dir}"/>
		<property name="source.private.meta.bin.my.dir" value="${source.private.meta.bin.dir}/${arjEd}" />
		<property name="source.private.meta.docs.my.dir" value="${source.private.meta.docs.dir}/${arjEd}" />
		<property name="source.private.meta.lntexts.my.dir" value="${source.private.meta.lntexts.dir}/${arjEd}" />
		<property name="source.private.meta.config.my.dir" value="${source.private.meta.config.dir}/${arjEd}" />

		<mkdir dir="${ant.arjunasdk.root.dir}" />
		<mkdir dir="${ant.arjunasdk.build.dir}" />
		<mkdir dir="${ant.arjunasdk.jar.dir}" />
		<mkdir dir="${private.arjunasdk.dist.tools.root.dir}/docs" />
		<mkdir dir="${private.arjunasdk.dist.components.jar.dir}" />
		<mkdir dir="${public.tools.arjunasdk.dir}" />
		<mkdir dir="${private.arjunasdk.dist.src.dir}/${arjunasdk.name}/src" />
		<mkdir dir="${private.arjunasdk.dist.src.dir}/${arjunasdk.name}/docs" />
		<mkdir dir="${private.arjunasdk.obfuscated.jar.dir}"/>
		<mkdir dir="${private.arjunasdk.self.jar.dir}"/>
		<mkdir dir="${private.arjunasdk.dist.tools.root.dir}" />
		<mkdir dir="${private.arjunasdk.dist.tools.root.dir}/bin" />
		<mkdir dir="${private.arjunasdk.dist.tools.root.dir}/bin/lib/java" />
		<mkdir dir="${private.arjunasdk.dist.tools.root.dir}/temp" />
		<mkdir dir="${private.arjunasdk.dist.tools.root.dir}/examples" />
		<mkdir dir="${private.arjunasdk.dist.tools.root.dir}/bin/tools" />
		<mkdir dir="${private.arjunasdk.dist.tools.root.dir}/bin/tools/uidrivers" />

		<mkdir dir="${private.arjunasdk.dist.tools.root.dir}/log" />
		<mkdir dir="${private.arjunasdk.dist.tools.root.dir}/ui_maps" />
		<mkdir dir="${private.arjunasdk.dist.tools.root.dir}/ui_images" />

		<copy todir="${private.arjunasdk.dist.tools.root.dir}/docs">
					<fileset dir="${source.private.meta.docs.common.dir}">
						<include name="**/*.*" />
					</fileset>
					<fileset dir="${source.private.meta.docs.my.dir}">
						<include name="**/*.*" />
					</fileset>
				</copy>
				
				<copy todir="${private.arjunasdk.dist.tools.dir}">
					<fileset dir="${source.private.meta.lntexts.common.dir}">
						<include name="**/*.*" />
					</fileset>
					<fileset dir="${source.private.meta.lntexts.my.dir}">
						<include name="**/*.*" />
					</fileset>
				</copy>
				
				<copy todir="${private.arjunasdk.dist.src.dir}/${arjunasdk.name}/docs">
					<fileset dir="${source.private.meta.docs.common.dir}">
						<include name="**/*.*" />
					</fileset>
					<fileset dir="${source.private.meta.docs.my.dir}">
						<include name="**/*.*" />
					</fileset>
				</copy>
				
				<copy todir="${private.arjunasdk.dist.src.dir}">
					<fileset dir="${source.private.meta.lntexts.common.dir}">
						<include name="**/*.*" />
					</fileset>
					<fileset dir="${source.private.meta.lntexts.my.dir}">
						<include name="**/*.*" />
					</fileset>
				</copy>
				
				<copy todir="${private.arjunasdk.dist.tools.root.dir}/bin">
					<fileset dir="${source.private.meta.bin.common.dir}">
						<include name="**/*.*" />
					</fileset>
					<fileset dir="${source.private.meta.bin.my.dir}">
						<include name="**/*.*" />
					</fileset>
				</copy>
		
				<copy todir="${private.arjunasdk.dist.tools.root.dir}/examples">
					<fileset dir="${source.private.meta.examples.common.dir}">
						<include name="**/*.*" />
					</fileset>
					<fileset dir="${source.private.meta.examples.my.dir}">
						<include name="**/*.*" />
					</fileset>
				</copy>

	</target>

	<target name="arjunasdk_compile">
		<!-- Create the time stamp -->
		<tstamp />
		<!-- Create the build directory structure used by compile -->

		<javac srcdir="${src.arjunasdk.dir}" destdir="${ant.arjunasdk.build.dir}" debug="true" debuglevel="lines,vars,source" includeantruntime="false">
			<classpath refid="build.classpath" />
		</javac>
		
		<copy todir="${ant.arjunasdk.build.dir}">
		    <fileset dir="${src.arjunasdk.dir}"
		             includes="**/*.conf" />
		    <fileset dir="${src.arjunasdk.dir}"
		             includes="**/*.help" />
		</copy>

		<jar jarfile="${ant.arjunasdk.jar.file}" basedir="${ant.arjunasdk.build.dir}" />
		<copy file="${ant.arjunasdk.jar.file}" tofile="${private.arjunasdk.self.jar.file}" />
		<jar destFile="${private.arjunasdk.clear.jar.file}">
			<zipgroupfileset includes="*.jar" dir="${private.batteries.self.jar.dir}" />
			<zipgroupfileset includes="*.jar" dir="${private.uiautomator.self.jar.dir}" />
			<zipgroupfileset includes="*.jar" dir="${private.arjunasdk.self.jar.dir}" />
		</jar>
		
		<copy todir="${private.arjunasdk.dist.src.dir}/${arjunasdk.name}/src">
			<fileset dir="${src.arjunasdk.dir}">
				<include name="**/*.*" />
			</fileset>
		</copy>
	</target>
			
	<target name="arjunasdk_build">
		<jar destFile="${private.arjunasdk.dist.tools.jar.file}">
		<zipgroupfileset includes="*.jar" dir="${3rd_party_batteries_jars}"/>
			<zipgroupfileset includes="*.jar" dir="${private.arjunasdk.obfuscated.jar.dir}"/>
		</jar>

		<zip destfile="${public.tools.arjunasdk.dist.file}" basedir="${private.arjunasdk.dist.tools.dir}" />
		
		<copy file="${private.arjunasdk.dist.tools.jar.file}" tofile="/Users/rahulverma/Documents/_autocognite/build_under_test/autocognite-arjuna/bin/lib/java/arjunasdk.jar"/>
		<copy file="${private.arjunasdk.dist.tools.jar.file}" tofile="/Users/rahulverma/Documents/VirtualBox_VMs/shared_dir/win/autocognite-arjuna/lib/java/arjunasdk.jar"/>

	</target>

</project>